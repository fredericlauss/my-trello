{% extends 'base.html.twig' %}

{% block title %}Boards{% endblock %}

{% block body %}
    <h1>Boards</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ board.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ board.name }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_boards_index') }}">back to list</a>

    <a href="{{ path('app_boards_edit', {'id': board.id}) }}">edit</a>

    {{ include('boards/_delete_form.html.twig') }}

    <h2>Columns:</h2>
    <ul>
        {% for column in board.columns %}
            <li>
                {{ column.name }}
                <a href="{{ path('app_columns_edit', {'id': column.id}) }}?boardId={{ column.board.id }}">Edit</a>
                <form action="{{ path('app_columns_delete', {'id': column.id}) }}?boardId={{ column.board.id }}}}" method="POST" onsubmit="return confirm('Are you sure you want to delete this column?')">
                    <input type="hidden" name="_method" value="DELETE">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ column.id) }}">
                    <button type="submit">Delete</button>
                </form>
                <h4>Tickets:</h4>
                <ul>
                    {% for ticket in column.tickets %}
                        <li>{{ ticket.name }}</li>
                        <a href="{{ path('app_tickets_edit', {'id': ticket.id}) }}">edit</a>
                        <form method="post" action="{{ path('app_tickets_delete', {'id': ticket.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ ticket.id) }}">
                        <button class="btn">Delete</button>
                        </form>
                    {% endfor %}
                    <li>
                         <a href="{{ path('app_column_tickets_new', {'columnid': column.id}) }}">Create new ticket</a>
                    </li>
                </ul>
            </li>
        {% endfor %}
            <li>
                <a href="{{ path('app_board_columns_new', {'boardId': board.id}) }}">Add a new column</a>
            </li>
    </ul>
{% endblock %}